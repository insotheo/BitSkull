<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFramework>net8.0</TargetFramework>
	  <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
	  <OutDir>..\Bin\Engine\Lib\$(Configuration)\</OutDir>
	  <AppendTargetFrameworkToOutDir>False</AppendTargetFrameworkToOutDir>
	  <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
	    
	  <Company>Insotheo</Company>
	  <AssemblyVersion>0.0.0.1</AssemblyVersion>
	  <FileVersion>0.0.0.1</FileVersion>
	    
	    <!--Params-->
	    <PlatformBackend>DEFAULT_PLATFORM</PlatformBackend>
	    
	    <!--End of params-->
    </PropertyGroup>

	<PropertyGroup>
		<SilkNetVersion>2.22.0</SilkNetVersion>
	</PropertyGroup>
	
	<ItemGroup>
		<Compile Include="Core\**\*.cs" />
		<Compile Include="Events\**\*.cs" />
		<Compile Include="InputSystem\**\*.cs" />
		<Compile Include="Numerics\**\*.cs" />
		<Compile Include="Graphics\**\*.cs" />
		<Compile Include="Assets\**\*.cs" />
		<Compile Include="Log.cs" />
		
		<PackageReference Include="Silk.NET.Input" Version="$(SilkNetVersion)" />
		<PackageReference Include="StbImageSharp" Version="2.30.15" />
	</ItemGroup>
	
	
    <!--DEFAULT_PLATFORM-->
	<ItemGroup Condition="'$(PlatformBackend)'=='DEFAULT_PLATFORM'">
	  <Compile Include="Platform\GLFW\GLFWWindow.cs" />
	  <Compile Include="Platform\OpenGL\*.cs" />
		
	  <PackageReference Include="Silk.NET.GLFW" Version="$(SilkNetVersion)" />
	  <PackageReference Include="Silk.NET.OpenGL" Version="$(SilkNetVersion)" />
	</ItemGroup>

	<PropertyGroup Condition="'$(PlatformBackend)'=='DEFAULT_PLATFORM'">
		<DefineConstants>DEFAULT_PLATFORM</DefineConstants>
	</PropertyGroup>
	<!--End of DEFAULT_PLATFORM-->
	
</Project>
